{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "http://localhost:3000",
  "resourcePath": "notifications",
  "apis": [
    {
      "path": "/api/v1/create_tables",
      "operations": [
        {
          "summary": "To create the users table on Dynamodb",
          "nickname": "Api::V1::Notifications#create_tables",
          "method": "get"
        }
      ]
    },
    {
      "path": "/api/v1/send_push",
      "operations": [
        {
          "summary": "To send a push notification to an User",
          "parameters": [
            {
              "paramType": "form",
              "name": "cell_phone",
              "type": "string",
              "description": "cell_phone e.g. 753005554444",
              "required": true
            },
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "Email address",
              "required": true
            },
            {
              "paramType": "form",
              "name": "longitude",
              "type": "string",
              "description": "Longitude",
              "required": false
            },
            {
              "paramType": "form",
              "name": "latitude",
              "type": "string",
              "description": "Latitude",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "User not found"
            },
            {
              "code": 200,
              "responseModel": null,
              "message": "{push_notifiation: 'Push notification send', logs: 'Added item: log'}"
            },
            {
              "code": 200,
              "responseModel": null,
              "message": "{push_notifiation: 'Push notification send', logs: 'Unable to add item: [Dynamo error message]'}"
            },
            {
              "code": 200,
              "responseModel": null,
              "message": "This user has push notification disabled"
            },
            {
              "code": 500,
              "responseModel": null,
              "message": "Users table not found: [Dynamo error message]"
            },
            {
              "code": 500,
              "responseModel": null,
              "message": "Internal Error"
            }
          ],
          "nickname": "Api::V1::Notifications#send_push",
          "method": "post"
        }
      ]
    },
    {
      "path": "/api/v1/verify_number",
      "operations": [
        {
          "summary": "To send the last 4 digits of the cell phone",
          "parameters": [
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "Email address",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "e.g. = '5555'"
            },
            {
              "code": 200,
              "responseModel": null,
              "message": "User not found"
            },
            {
              "code": 500,
              "responseModel": null,
              "message": "Users table not found: [Dynamo error message]"
            }
          ],
          "nickname": "Api::V1::Notifications#verify_number",
          "method": "post"
        }
      ]
    }
  ],
  "authorizations": null
}